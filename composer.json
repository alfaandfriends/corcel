{
    "name": "alfaandfriends/corcel",
    "replace": { "juniorgrossi/corcel": "self.version" },
    "description": "Use WordPress backend with Laravel or any PHP framework",
    "homepage": "http://github.com/corcel/corcel",
    "license": "MIT",
    "authors": [
        {
            "name": "Junior Grossi",
            "email": "juniorgro@gmail.com",
            "homepage": "http://jgrossi.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/database": "*",
        "illuminate/filesystem": "*",
        "illuminate/support": "*",
        "fakerphp/faker": "^1.23",
        "bordoni/phpass": "^0.3.6",
        "thunderer/shortcode": "^0.7.5"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "symfony/thanks": "^1.0",
        "mockery/mockery": "^1.4.4",
        "dms/phpunit-arraysubset-asserts": "^0.3",
        "laravel/legacy-factories": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Corcel\\": "src/",
            "Corcel\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Corcel\\Laravel\\CorcelServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/thanks": true
        }
    }
}
